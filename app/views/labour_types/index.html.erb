<p class="form_div" id="notice"><%= notice %></p>

<h1 class="form_div">Labour Types <%= link_to 'Add', new_labour_type_path,:style=>"font-size: medium" %></h1>

<table id="labour_type_tbl" class="form_div table table-striped table-condensed" style="width:90%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Is active</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
  <%if @labour_types.present?%>
    <% @labour_types.each do |labour_type| %>
      <tr>
        <td><%= labour_type.name %></td>
        <td><%= labour_type.is_active %></td>
        <td><%= link_to 'Edit', edit_labour_type_path(labour_type) %></td>
        <td><%= link_to 'Destroy', labour_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% else %>
    <tr>
    <th colspan="4">No Records Found</th>
    </tr>
  <% end %>    
  </tbody>
</table>

<br>

