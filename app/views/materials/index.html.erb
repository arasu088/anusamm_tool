<p class="form_div" id="notice"><%= notice %></p>

<h1 class="form_div">Materials <%= link_to 'Add', new_material_path,:style=>"font-size: medium" %></h1>

<table id="material_tbl" class="form_div table table-striped table-condensed" style="width:90%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Is active</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
  <%if @materials.present?%>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.is_active %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% else %>
    <tr>
    <th colspan="4">No Records Found</th>
    </tr>
  <% end %>    
  </tbody>
</table>

<br>

<script>
$(document).ready(function() {
  $('#material_tbl').DataTable();
} );
</script>
